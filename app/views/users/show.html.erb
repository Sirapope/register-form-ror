<div class="form-container">
    <%= link_to 'Back', users_path, class: 'back-button' %>
    <div>
        <h1>User Details</h1>
        
        <div>
          <p><strong>First Name:</strong> <%= @user.first_name %></p>
          <p><strong>Last Name:</strong> <%= @user.last_name %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Phone Number:</strong> <%= @user.phone_number %></p>
          <p><strong>Birthday:</strong> <%= @user.birthday.strftime('%d-%m-%Y') %></p>
          <p><strong>Gender:</strong> <%= @user.gender.capitalize %></p>
          <p><strong>Subject:</strong> <%= @user.subject %></p>
        </div>
      
        <div class="action-buttons">
          <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-edit' %>
        </div>
      </div>
</div>
